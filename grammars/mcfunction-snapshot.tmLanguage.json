{
  "name": "mcfunction-snapshot",
  "scopeName": "source.mcfunction-snapshot",
  "fileTypes": [
    "mcfunction"
  ],
  "patterns": [
    {
      "include": "#comment"
    },
    {
      "include": "#command"
    },
    {
      "include": "#unknown"
    }
  ],
  "repository": {
    "comment": {
      "patterns": [
        {
          "name": "meta.comment.mcfunction",
          "begin": "^[ \\t]*(?=\\#)",
          "end": "\\n",
          "patterns": [
            {
              "include": "#comments"
            }
          ]
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "meta.comment.annotation.mcfunction",
          "match": "(##)[ \\t]*(.*)$",
          "captures": {
            "1": {
              "name": "comment.comment.mcfunction"
            },
            "2": {
              "name": "markup.heading.comment.mcfunction"
            }
          }
        },
        {
          "name": "meta.comment.todo.mcfunction",
          "match": "(#)[ \\t]*((?:TODO|FIXME|XXX))(\\b.*)$",
          "captures": {
            "1": {
              "name": "comment.comment.mcfunction"
            },
            "2": {
              "name": "markup.bold.name.marker.comment.mcfunction"
            },
            "3": {
              "name": "comment.text.marker.comment.mcfunction"
            }
          }
        },
        {
          "name": "meta.comment.annotation.mcfunction",
          "match": "(#)[ \\t]*(\\@\\w*)(\\b.*)$",
          "captures": {
            "1": {
              "name": "comment.comment.mcfunction"
            },
            "2": {
              "name": "markup.heading.name.annotation.comment.mcfunction"
            },
            "3": {
              "name": "comment.text.annotation.comment.mcfunction"
            }
          }
        },
        {
          "name": "meta.comment.plain.mcfunction",
          "match": "(#.*)$",
          "captures": {
            "1": {
              "name": "comment.comment.mcfunction"
            }
          }
        }
      ]
    },
    "command": {
      "patterns": [
        {
          "name": "meta.command.mcfunction",
          "begin": "^[ \\t]*(?=[^\\s\\#])",
          "end": "\\n",
          "patterns": [
            {
              "include": "#generated_commands"
            },
            {
              "include": "#command.unknown"
            }
          ]
        }
      ]
    },
    "command.unknown": {
      "patterns": [
        {
          "name": "meta.command.unknown.mcfunction",
          "match": "(.*)$",
          "captures": {
            "1": {
              "name": "invalid.mcfunction"
            }
          }
        }
      ]
    },
    "unknown": {
      "patterns": [
        {
          "name": "meta.unknown.mcfunction",
          "match": "^(.*)$",
          "captures": {
            "1": {
              "name": "invalid.mcfunction"
            }
          }
        }
      ]
    },
    "generated_commands": {
      "patterns": []
    }
  }
}