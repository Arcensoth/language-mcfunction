{
  "name": "language-mcfunction",
  "displayName": "language-mcfunction",
  "description": "Language grammars and syntax highlighting for mcfunction files.",
  "version": "0.11.0-dev",
  "author": "arcensoth",
  "publisher": "arcensoth",
  "license": "MIT",
  "repository": "https://github.com/Arcensoth/language-mcfunction",
  "scripts": {
    "vscode:prepublish": "cd client && npm run update-vscode && cd .. && npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "test": "sh ./scripts/e2e.sh",
    "compile-lib": "tsc -b lib -v",
    "generate-grammars": "npm run compile-lib && node lib/out/cli.js"
  },
  "engines": {
    "vscode": "^1.30.0"
  },
  "activationEvents": [
    "onLanguage:mcfunction",
    "onLanguage:mcfunction-snapshot"
  ],
  "main": "./client/out/extension",
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "minecraft",
    "mcfunction",
    "datapack"
  ],
  "contributes": {
    "languages": [
      {
        "id": "mcfunction-snapshot",
        "aliases": [
          "mcfunction-snapshot"
        ],
        "extensions": [
          "mcfunction"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "mcfunction",
        "aliases": [
          "mcfunction"
        ],
        "extensions": [
          "mcfunction"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "mcfunction-snapshot",
        "scopeName": "source.mcfunction-snapshot",
        "path": "./grammars/mcfunction-snapshot.tmLanguage.json"
      },
      {
        "language": "mcfunction",
        "scopeName": "source.mcfunction",
        "path": "./mcfunction.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "mcfunction configuration",
      "properties": {
        "mcfunction.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "mcfunction.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "devDependencies": {
    "js-yaml": "latest",
    "plist": "latest",
    "typescript": "latest",
    "@types/js-yaml": "latest",
    "@types/plist": "latest",
    "@types/node": "latest"
  }
}
