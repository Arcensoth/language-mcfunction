{
  "name": "language-mcfunction",
  "displayName": "language-mcfunction",
  "icon": "icon.png",
  "description": "Language grammars and syntax highlighting for mcfunction files.",
  "version": "0.17.0-dev",
  "publisher": "arcensoth",
  "license": "MIT",
  "repository": "https://github.com/Arcensoth/language-mcfunction",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "test": "sh ./scripts/e2e.sh",
    "compile-lib": "tsc -b lib -v",
    "cli": "npm run compile-lib && node lib/out/cli.js"
  },
  "engines": {
    "vscode": "^1.30.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "minecraft",
    "mcfunction",
    "datapack"
  ],
  "contributes": {
    "languages": [
      {
        "id": "mcfunction-snapshot",
        "aliases": [
          "mcfunction-snapshot"
        ],
        "extensions": [
          "mcfunction"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "mcfunction",
        "aliases": [
          "mcfunction"
        ],
        "extensions": [
          "mcfunction"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "mcfunction-snapshot",
        "scopeName": "source.mcfunction-snapshot",
        "path": "./grammars/mcfunction-snapshot.tmLanguage.json"
      },
      {
        "language": "mcfunction",
        "scopeName": "source.mcfunction",
        "path": "./mcfunction.tmLanguage.json"
      }
    ]
  },
  "devDependencies": {
    "@types/bson": "latest",
    "@types/js-yaml": "latest",
    "@types/node": "latest",
    "@types/plist": "latest",
    "bson": "latest",
    "js-yaml": "^3.13.1",
    "plist": "latest",
    "typescript": "latest"
  }
}
