{
  "name": "language-mcfunction",
  "displayName": "language-mcfunction",
  "description": "Generic version-agnostic language grammar and syntax highlighting for mcfunction files.",
  "version": "0.4.0-dev",
  "publisher": "arcensoth",
  "repository": "https://github.com/Arcensoth/language-mcfunction",
  "license": "MIT",
  "scripts": {
    "build": "tsc -b build -v && node build/build.js",
    "debug": "tsc -b build -v && node --nolazy --inspect-brk=9229 build/build.js"
  },
  "engines": {
    "vscode": "^1.30.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "mcfunction",
        "aliases": [
          "mcfunction"
        ],
        "extensions": [
          "mcfunction"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "mcfunction",
        "scopeName": "source.mcfunction",
        "path": "./mcfunction.tmLanguage.json"
      }
    ]
  },
  "devDependencies": {
    "js-yaml": "latest",
    "plist": "latest",
    "typescript": "latest",
    "@types/js-yaml": "latest",
    "@types/plist": "latest",
    "@types/node": "latest"
  }
}
